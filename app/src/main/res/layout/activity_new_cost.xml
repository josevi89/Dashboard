<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <!--tools:showIn="@layout/activity_main">-->
    <!--tools:context=".NewShippingActivity"-->
    <!--tools:showIn="@layout/activity_main">-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/new_shipping_header"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/new_shipping_header_buttons"
            android:backgroundTint="@color/red_app"
            android:background="@color/red_app">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/logo_mercadona"
                android:id="@+id/new_shipping_mercadona_selector"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/logo_estanco_bn"
                android:id="@+id/new_shipping_estanco_selector"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:id="@+id/new_shipping_mercadona_groups">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Carne"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_meat_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Pescado"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_fish_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Lacteos"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_milk_checkbox"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Desayuno"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_breakfast_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Bebidas"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_drinks_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Congelados"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_frozen_checkbox"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Preparados"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_prepared_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Panadería"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_bread_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Animales"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_animal_checkbox"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Vegetales"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_vegetable_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Otros"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_others_checkbox"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:id="@+id/new_shipping_estanco_groups"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Tabaco"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_tobacco_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Papel"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_paper_checkbox"/>

                <CheckBox
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Filtros"
                    android:buttonTint="@color/red_app"
                    android:id="@+id/new_shipping_filters_checkbox"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir:"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:id="@+id/new_shipping_find_add_item"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scrollbars="vertical"
                android:id="@+id/products_finded_list"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Otros"/>

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:id="@+id/new_shipping_others_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_shipping_total"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="0 €"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAllCaps="true"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/red_app"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="Ver Compra"
                    android:layout_marginRight="20dp"
                    android:id="@+id/new_shipping_see_shipping"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAllCaps="true"
                    android:backgroundTint="@color/red_app"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:id="@+id/new_shipping_save_shipping"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>