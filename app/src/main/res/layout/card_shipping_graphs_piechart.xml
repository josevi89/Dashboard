<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/shipping_graphs_piechart_card_container">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp"
        card_view:cardCornerRadius="2dp"
        android:id="@+id/shipping_graphs_piechart_card_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:id="@+id/shipping_graphs_piechart_card_inside_container">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/shipping_graphs_piechart_card_label">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/red_app"
                    android:id="@+id/shipping_graphs_piechart_label"
                    android:text="Porcentaje"/>

            </LinearLayout>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/shipping_graphs_piechart_chart"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerInParent="true"
                android:layout_height="200dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>