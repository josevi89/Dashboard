<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/shipping_graphs_percent_charts_card_container">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        card_view:cardCornerRadius="2dp"
        android:id="@+id/shipping_graphs_percent_charts_card_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:id="@+id/shipping_graphs_percent_charts_card_inside_container">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/shipping_graphs_percent_charts_card_label">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/red_app"
                    android:id="@+id/shipping_graphs_percent_charts_label"
                    android:text="Porcentaje"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:id="@+id/shipping_graphs_percent_charts_principal_chart_container"
                android:layout_below="@id/shipping_graphs_percent_charts_card_label">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/shipping_graphs_percent_charts_principal_chart"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="-15dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/shipping_graphs_percent_charts_principal_chart_legend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2"
            android:layout_below="@id/shipping_graphs_percent_charts_principal_chart_container"
            android:id="@+id/shipping_graphs_percent_charts_store_percents_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/shipping_graphs_percent_charts_mercadona_percent_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercadona"
                    android:textColor="@color/green_mercadona"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 %"
                    android:id="@+id/shipping_graphs_percent_charts_percent_mercadona"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/shipping_graphs_percent_charts_estanco_percent_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estanco"
                    android:textColor="@color/brown_estanco"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 %"
                    android:id="@+id/shipping_graphs_percent_charts_percent_estanco"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/shipping_graphs_percent_charts_roll_percent_container">>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll"
                    android:textColor="@color/purple_roll"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"/>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/shipping_graphs_percent_charts_secondary_chart_container"
                android:layout_below="@id/shipping_graphs_percent_charts_store_percents_container"
                android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="top"
                android:weightSum="3">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/shipping_graphs_percent_charts_secondary_chart"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:gravity="top|right">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/shipping_graphs_percent_charts_secondary_chart_unexpand_button"
                        android:src="@mipmap/icon_unexpand_red"
                        android:layout_marginBottom="10dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/shipping_graphs_percent_charts_secondary_chart_legend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alto contraste"
                        android:id="@+id/shipping_graphs_percent_charts_secondary_chart_high_contrast_checkbox"
                        android:buttonTint="@color/red_app"/>

                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>